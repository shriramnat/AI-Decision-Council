{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Enabled": true,
    "EntraId": {
      "ClientId": "",
      "ClientSecret": "",
      "TenantId": "",
      "Instance": "https://login.microsoftonline.com/",
      "CallbackPath": "/signin-oidc"
    },
    "MicrosoftAccount": {
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-microsoft"
    },
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-google"
    },
    "Cookie": {
      "ExpireTimeMinutes": 30
    }
  },
  "DXO": {
    "DefaultModelCreator": "gpt-5.2",
    "DefaultModelReviewer": "gpt-5.2",
    "RequestTimeoutSeconds": 60,
    "MaxRetries": 2,
    "Models": [
      {
        "ModelName": "gpt-5.2",
        "DisplayName": "GPT-5.2",
        "Endpoint": "https://api.openai.com/v1/",
        "Provider": "OpenAI"
      }
    ],
    "Orchestration": {
      "DefaultMaxIterations": 8,
      "DefaultStopMarker": "FINAL:",
      "StopOnReviewerApproved": false,
      "MaxPromptChars": 20000,
      "MaxDraftChars": 50000,
      "ContextTurnsToSend": 8
    },
    "Persistence": {
      "Enabled": true,
      "ConnectionString": "Data Source=dxo.db"
    },
    "RateLimiting": {
      "PermitLimit": 10,
      "WindowSeconds": 60
    }
  }
}
