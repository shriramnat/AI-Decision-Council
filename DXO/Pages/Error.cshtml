@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-container">
    <h1>üö® An error occurred</h1>
    
    <p class="error-message">Sorry, an unexpected error has occurred while processing your request.</p>
    
    @if (Model.ShowRequestId)
    {
        <p class="request-id">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    
    <div class="error-actions">
        <a href="/" class="btn btn-primary">‚Üê Back to Home</a>
    </div>
    
    <div class="error-tips">
        <h3>Troubleshooting Tips:</h3>
        <ul>
            <li>Check that your OpenAI API key is configured correctly</li>
            <li>Ensure the application has network access to api.openai.com</li>
            <li>Review the application logs for more details</li>
            <li>Try refreshing the page or restarting the session</li>
        </ul>
    </div>
</div>

<style>
    .error-container {
        max-width: 600px;
        margin: 4rem auto;
        text-align: center;
        padding: 2rem;
    }
    
    .error-container h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--danger-color);
    }
    
    .error-message {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }
    
    .request-id {
        background: var(--bg-tertiary);
        padding: 1rem;
        border-radius: var(--radius);
        margin-bottom: 1.5rem;
    }
    
    .request-id code {
        color: var(--info-color);
    }
    
    .error-actions {
        margin-bottom: 2rem;
    }
    
    .error-tips {
        text-align: left;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        padding: 1.5rem;
    }
    
    .error-tips h3 {
        font-size: 1rem;
        margin-bottom: 1rem;
        color: var(--warning-color);
    }
    
    .error-tips ul {
        margin: 0;
        padding-left: 1.5rem;
        color: var(--text-secondary);
    }
    
    .error-tips li {
        margin-bottom: 0.5rem;
    }
</style>
