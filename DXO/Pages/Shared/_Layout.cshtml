<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Decision Council</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/site-base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-light.css" id="themeStylesheet" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo-link">
                <h1 class="logo">ü§î</h1>
            </a>
            <span class="tagline">AI Decision Council</span>
            <nav class="header-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/Settings" class="nav-link">Configure Models</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-menu">
                        <button class="user-button" id="userMenuButton" aria-label="User menu">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </button>
                        <div class="user-dropdown" id="userDropdown">
                            <div class="user-email">@(User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? User.FindFirst("email")?.Value ?? User.FindFirst("preferred_username")?.Value ?? "User")</div>
                            <div class="dropdown-divider"></div>
                            
                            <!-- Theme Picker -->
                            <div class="dropdown-item" id="themePicker" style="flex-direction: column; align-items: stretch; gap: 0.5rem; cursor: default;">
                                <span style="font-size: 0.75rem; color: var(--text-tertiary); text-transform: uppercase; letter-spacing: 0.03em;">Theme</span>
                                <div style="display: flex; gap: 0.5rem;">
                                    <button class="theme-option" data-theme="light" title="Light Theme">‚òÄÔ∏è</button>
                                    <button class="theme-option" data-theme="dark" title="Dark Theme">üåô</button>
                                </div>
                            </div>
                            <div class="dropdown-divider"></div>
                            
                            <a href="/Logout" class="dropdown-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                    <polyline points="16 17 21 12 16 7"></polyline>
                                    <line x1="21" y1="12" x2="9" y2="12"></line>
                                </svg>
                                Logout
                            </a>
                        </div>
                    </div>
                }
            </nav>
        </div>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-content">
            <span>¬© 2025 AI Decision Council. All rights reserved. | Empowering collaborative AI decision-making.</span>
            <span> | <a href="https://github.com/shriramnat/AI-Decision-Council" target="_blank" rel="noopener noreferrer">View on GitHub</a></span>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/9.1.6/marked.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Floating scroll buttons (global) -->
    <div id="scrollFabContainer" class="scroll-fab" aria-hidden="false">
        <button id="scrollTopBtn" class="scroll-fab-btn" title="Scroll to Top" aria-label="Scroll to Top">‚Üë</button>
        <button id="scrollBottomBtn" class="scroll-fab-btn" title="Scroll to Bottom" aria-label="Scroll to Bottom">‚Üì</button>
    </div>

    <script>
        // Scroll button functionality
        document.getElementById('scrollTopBtn').addEventListener('click', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        document.getElementById('scrollBottomBtn').addEventListener('click', function() {
            window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
        });

        // User menu dropdown functionality
        const userMenuButton = document.getElementById('userMenuButton');
        const userDropdown = document.getElementById('userDropdown');
        
        if (userMenuButton && userDropdown) {
            userMenuButton.addEventListener('click', function(e) {
                e.stopPropagation();
                userDropdown.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!userMenuButton.contains(e.target) && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('show');
                }
            });
        }

        // Theme switching functionality
        (function() {
            const THEME_KEY = 'dxo-theme';
            const themeStylesheet = document.getElementById('themeStylesheet');
            const themeButtons = document.querySelectorAll('.theme-option');
            
            // Get saved theme or default to 'light'
            const savedTheme = localStorage.getItem(THEME_KEY) || 'light';
            
            // Apply saved theme on load
            applyTheme(savedTheme);
            
            // Setup theme button listeners
            themeButtons.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const theme = btn.dataset.theme;
                    applyTheme(theme);
                    localStorage.setItem(THEME_KEY, theme);
                });
            });
            
            function applyTheme(theme) {
                const cssPath = `/css/theme-${theme}.css?v=` + new Date().getTime();
                themeStylesheet.setAttribute('href', cssPath);
                
                // Update active button state
                themeButtons.forEach(btn => {
                    if (btn.dataset.theme === theme) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            }
        })();
    </script>
</body>
</html>